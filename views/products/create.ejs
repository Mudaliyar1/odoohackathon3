<%- include('../partials/flash') %>

<div class="container mt-4">
    <h1 class="mb-4 text-primary fw-bold">Create New Product</h1>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form action="/products/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
                </div>
                <div class="mb-3">
                    <label for="sku" class="form-label">SKU <small class="text-muted">(Leave empty to auto-generate)</small></label>
                    <input type="text" class="form-control" id="sku" name="sku" value="<%= typeof sku != 'undefined' ? sku : '' %>">
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <input type="text" class="form-control" id="category" name="category" value="<%= typeof category != 'undefined' ? category : '' %>" required>
                </div>
                <div class="mb-3">
                    <label for="unitOfMeasure" class="form-label">Unit of Measure</label>
                    <input type="text" class="form-control" id="unitOfMeasure" name="unitOfMeasure" value="<%= typeof unitOfMeasure != 'undefined' ? unitOfMeasure : '' %>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= typeof price != 'undefined' ? price : '' %>" min="0" step="0.01" required>
                </div>
                <div class="mb-3">
                    <label for="reorderLevel" class="form-label">Reorder Level</label>
                    <input type="number" class="form-control" id="reorderLevel" name="reorderLevel" value="<%= typeof reorderLevel != 'undefined' ? reorderLevel : '' %>" required>
                </div>
                <div class="mb-3">
                    <label for="warehouse" class="form-label">Warehouse</label>
                    <select class="form-select" id="warehouse" name="warehouse" required>
                        <option value="">Select Warehouse</option>
                        <% if (warehouses && warehouses.length > 0) { %>
                            <% warehouses.forEach(warehouse => { %>
                                <option value="<%= warehouse._id %>" <%= (typeof warehouseId != 'undefined' && warehouseId == warehouse._id) ? 'selected' : '' %>><%= warehouse.name %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Initial Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="<%= typeof quantity != 'undefined' ? quantity : '' %>" min="0" required>
                </div>
                <button type="submit" class="btn btn-primary rounded-pill">Add Product</button>
                <a href="/products" class="btn btn-secondary rounded-pill">Cancel</a>
            </form>
        </div>
    </div>
</div>