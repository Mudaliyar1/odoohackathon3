<%- include('../partials/flash') %>

<div class="container mt-4">
    <h1 class="mb-4 text-primary fw-bold">Product List</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/products/create" class="btn btn-primary">Add New Product</a>
        <a href="/products/kanban" class="btn btn-info">Switch to Kanban View</a>
    </div>

    <% if (products.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Category</th>
                        <th>Unit of Measure</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Reorder Level</th>
                        <th>Warehouse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.name %></td>
                            <td><%= product.sku %></td>
                            <td><%= product.category %></td>
                            <td><%= product.unitOfMeasure %></td>
                            <td>$<%= product.price %></td>
                            <td><%= product.availableQuantity %></td>
                            <td><%= product.reorderLevel %></td>
                            <td><%= product.warehouse ? product.warehouse.name : 'N/A' %></td>
                            <td>
                                <a href="/products/<%= product._id %>" class="btn btn-info btn-sm">View</a>
                                <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/products/<%= product._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p class="text-center">No products found. Please add a new product.</p>
    <% } %>
</div>