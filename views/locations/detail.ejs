<%- include('../partials/flash') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Location Details</h1>
</div>

<div class="card mb-3">
    <div class="card-header">
        Location: <%= location.name %>
    </div>
    <div class="card-body">
        <p><strong>Warehouse:</strong> <%= location.warehouse.name %></p>
        <p><strong>Description:</strong> <%= location.description %></p>
        <p><strong>Created At:</strong> <%= location.createdAt.toLocaleString() %></p>
        <p><strong>Last Updated:</strong> <%= location.updatedAt.toLocaleString() %></p>

        <div class="mt-3">
            <a href="/locations" class="btn btn-secondary">Back to Location List</a>
            <a href="/locations/<%= location._id %>/edit" class="btn btn-warning">Edit Location</a>
            <form action="/locations/<%= location._id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this location?');">Delete Location</button>
            </form>
        </div>
    </div>
</div>