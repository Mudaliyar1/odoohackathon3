<%- include('../partials/flash') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Move History</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Type</th>
                <th>Source Warehouse</th>
                <th>Source Location</th>
                <th>Destination Warehouse</th>
                <th>Destination Location</th>
                <th>Moved By</th>
            </tr>
        </thead>
        <tbody>
            <% moves.forEach(move => { %>
                <tr>
                    <td><%= move.timestamp.toLocaleString() %></td>
                    <td><%= move.product.name %> (<%= move.product.sku %>)</td>
                    <td><%= move.quantity %></td>
                    <td><%= move.type %></td>
                    <td><%= move.sourceWarehouse ? move.sourceWarehouse.name : 'N/A' %></td>
                    <td><%= move.sourceLocation ? move.sourceLocation.name : 'N/A' %></td>
                    <td><%= move.destinationWarehouse ? move.destinationWarehouse.name : 'N/A' %></td>
                    <td><%= move.destinationLocation ? move.destinationLocation.name : 'N/A' %></td>
                    <td><%= move.user ? move.user.username : 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>