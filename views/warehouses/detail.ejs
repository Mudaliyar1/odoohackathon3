<%- include('../partials/flash') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Warehouse Details</h1>
</div>

<div class="card mb-3">
    <div class="card-header">
        Warehouse: <%= warehouse.name %>
    </div>
    <div class="card-body">
        <p><strong>Location:</strong> <%= warehouse.location %></p>
        <p><strong>Description:</strong> <%= warehouse.description %></p>
        <p><strong>Created At:</strong> <%= warehouse.createdAt.toLocaleString() %></p>
        <p><strong>Last Updated:</strong> <%= warehouse.updatedAt.toLocaleString() %></p>

        <div class="mt-3">
            <a href="/warehouses" class="btn btn-secondary">Back to Warehouse List</a>
            <a href="/warehouses/<%= warehouse._id %>/edit" class="btn btn-warning">Edit Warehouse</a>
            <form action="/warehouses/<%= warehouse._id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this warehouse?');">Delete Warehouse</button>
            </form>
        </div>
    </div>
</div>