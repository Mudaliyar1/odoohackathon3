<%- include('../partials/flash') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Warehouses</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/warehouses/create" class="btn btn-sm btn-outline-secondary">
            <span data-feather="plus"></span>
            Add New Warehouse
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% warehouses.forEach(warehouse => { %>
                <tr>
                    <td><%= warehouse.name %></td>
                    <td><%= warehouse.location %></td>
                    <td><%= warehouse.description %></td>
                    <td>
                        <a href="/warehouses/<%= warehouse._id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/warehouses/<%= warehouse._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/warehouses/<%= warehouse._id %>/delete" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this warehouse?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>