<%- include('../partials/flash') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-primary fw-bold">Edit Warehouse</h1>
</div>

<div class="col-lg-6 col-md-8 mx-auto">
    <form action="/warehouses/<%= warehouse._id %>/edit" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Warehouse Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= warehouse.name %>" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" name="location" value="<%= warehouse.location %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= warehouse.description %></textarea>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary rounded-pill">Update Warehouse</button>
            <a href="/warehouses/<%= warehouse._id %>" class="btn btn-secondary rounded-pill">Cancel</a>
        </div>
    </form>
</div>